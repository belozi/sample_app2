<% provide(:title, "#{@user.first_name} #{ @user.last_name}") %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= @user.first_name %> <%= @user.last_name %> 
			</h1>
			<p>
				<%= @user.email %>
			</p>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.microposts.any? %>
			<h3>Logs (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>
